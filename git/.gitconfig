[delta "interactive"]
  features = colorscheme
  keep-plus-minus-markers = false
[delta]
  features = colorscheme
  navigate = true
  side-by-side = false
	theme = ansi

; [delta]
;   navigate = true
;   ; side-by-side = true
;   light = false
;   line-numbers = false

[diff]
  algorithm = patience
  compactionHeuristic = true
  tool = nvimdiff
  colorMoved = default

[difftool "nvimdiff"]
  cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd L\"

[merge]
  tool = nvimdiff4

[mergetool "nvimdiff4"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[diff "lockb"]
	binary = true
	textconv = bun
[color]
	pager = yes


