[include]
  path = ~/.git-personal.conf
[includeIf "gitdir:~/work/"]
  path = ~/.git-mar.conf
[includeIf "gitdir:~/tmp/"]
  path = ~/.git-mar.conf
[includeIf "gitdir:~/private/"]
  path = ~/.git-personal.conf
[includeIf "gitdir:~/projects/"]
  path = ~/.git-personal.conf

[init]
	defaultBranch = main
